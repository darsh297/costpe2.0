<div class="sidebar">
  <div>
    <img src="https://i.imgur.com/9Q4oeZ3.png" alt="Logo" style="max-width: 80%; max-height: 80%;">

    <br/>

    <%= link_to "Dashbord", workreports_path, style: "color: white; text-decoration: none;" %>
    <br/>
    <br/>
    <%= link_to "Add Workreport", new_report_path, style: "color: white; text-decoration: none;" %>
    <br/>
    <br/>
    <%= link_to "Attendances", attendances_path, style: "color: white; text-decoration: none;" %>
    <br/>
    <br/>
    <%= link_to 'Profile', profile_path(current_user), style: "color: white; text-decoration: none;" %>
    <br/>
    <br/>
    <% if can? :create, User %>
      <%= link_to 'Manage User ', users_path, style: "color: white; text-decoration: none;" %>
      <br/>
    <% end %>
  </div>

  <div style="margin-top: auto; margin-bottom: 10px;">
    <%= link_to 'Logout', destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, style: "color: white; text-decoration: none;" %>
  </div>
</div>

<div class="content">
  <div style="text-align: left; margin-top: 100px;">
    <h1>Reports</h1>

    <%= form_for(@report) do |f| %>
      <div class="field">
        <%= f.label :report_date %><br />
        <%= f.date_field :report_date, class: "form-control", required: true %> <br />
      </div>

      <div class="field">
        <%= f.label :tasks %><br />
        <%= f.text_area :tasks, class: "form-control", required: true %> <br />
      </div>

      <div class="field">
        <div class="row">
          <div class="col">
            <%= f.label :Hour %><br />
            <%= f.select :hours, (0..23).to_a, { required: true }, class: "form-control" %>
          </div>

          <div class="col">
            <%= f.label :Minute %><br />
            <%= f.select :minutes, (0..59).to_a, { required: true }, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="field">
        <%= f.label :status %><br />
        <%= f.select :status, options_for_select(['inprogress', 'complete']), { required: true }, class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Submit", class: "btn btn-primary", style: "background-color: #365486; border-color: #365486;" %>
      </div>
    <% end %>
  </div>
</div>
