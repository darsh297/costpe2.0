


<style>
    .custom-button {
      background-color: #365486 !important;
      color: white !important;
      width: 100%;
      margin-bottom: 15px;
    }

    .custom-button:hover {
      background-color: #365486 !important;
      color: white !important;
      opacity: 0.8;
    }
  </style>


  <div class="sidebar">
    <div>
      <img src="https://i.imgur.com/9Q4oeZ3.png" alt="Logo" style="max-width: 80%; max-height: 80%;">

      <br/>

      <%= link_to "Dashbord", workreports_path, style: "color: white; text-decoration: none;" %>
      <br/>
      <br/>
      <%= link_to "Attendances", attendances_path, style: "color: white; text-decoration: none;" %>
      <br/>
      <br/>
      <%= link_to 'Profile', profile_path, style: "color: white; text-decoration: none;" %>
      <br/>
      <br/>
      <% if can? :create, User %>
        <%= link_to 'Manage User ', users_path, style: "color: white; text-decoration: none;" %>
        <br/>
      <% end %>
    </div>

    <div style="margin-top: auto; margin-bottom: 10px;">
      <%= link_to 'Logout', destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, style: "color: white; text-decoration: none;" %>
    </div>


  </div>

  <div class="content">


    <div style="text-align: left;">
      <h1>All Users</h1>

      <% if @users.any? %>
        <table class="table table-bordered table-striped">
          <%= link_to 'Add user', user_path, class: "btn btn-success custom-button", method: :get, style: "margin-bottom: 15px; width:100px" %>
          <thead class="thead-dark">
            <tr>
              <th>Email</th>
              <th>Role</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.email %></td>
                <td><%= user.role.role_name %></td>
                <td>
                  <%= link_to 'Edit Profile', edit_user_registration_path, class: "btn btn-warning btn-sm custom-button", style: "margin-right: 5px;" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No users found.</p>
      <% end %>
    </div>
  </div>

