<div class="sidebar">
    <div>
      <img src="https://i.imgur.com/9Q4oeZ3.png" alt="Logo" style="max-width: 80%; max-height: 80%;">

      <br/>

      <%= link_to "Dashbord", workreports_path, style: "color: white; text-decoration: none;" %>
       <br/>
      <br/>
      <%= link_to "Add Workreport", reports_path, style: "color: white; text-decoration: none;" %>
      <br/>
      <br/>
      <%= link_to "Attendances", attendances_path, style: "color: white; text-decoration: none;" %>
      <br/>
      <br/>
      <%= link_to 'Profile', profile_path(current_user), style: "color: white; text-decoration: none;" %>
      <br/>
      <br/>
      <% if can? :create, User %>
        <%= link_to 'Manage User ', users_path, style: "color: white; text-decoration: none;" %>
        <br/>
      <% end %>
    </div>

    <div style="margin-top: auto; margin-bottom: 10px;">
      <%= link_to 'Logout', destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, style: "color: white; text-decoration: none;" %>
    </div>
  </div>

  <div class="content">

    <div style="text-align: left; margin-top:100px">
    <h1>Add User</h1>

    <%= form_for(:user, url: user_path, data: { turbo: false }) do |f| %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :role_id %><br />
        <%= f.collection_select :role_id, Role.all, :id, :role_name, { prompt: "Select a role" }, class: "form-select" %>
      </div>
      <br/>
      <div class="actions">
        <%= f.submit "Add", class: "btn btn-primary", style: "width:100px;  background-color: #365486; border-color: #365486;" %>
      </div>

    <% end %>


  </div>
    </div>
</div>
